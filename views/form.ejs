<!DOCTYPE html>
<html>
<head>
    <title>Cryptocurrency Form</title>
</head>
<body>
    <h1>Select Cryptocurrency</h1>
    <form action="/api/notify" method="POST">
        <div>
            <label for="crypto">Cryptocurrency:</label>
            <select name="crypto" id="crypto">
                <% for (let i = 0; i < cryptoList.length; i++) { %>
                    <option value="<%= cryptoList[i] %>"><%= cryptoList[i] %></option>
                <% } %>
            </select>
        </div>
        <div>
            <label for="email">Email:</label>
            <input type="email" name="email" id="email" required>
        </div>
        <br>
        <button type="submit">Notify me</button>
    </form>

    <% if (Object.keys(cryptoPrices).length > 0) { %>
        <h2>Latest Prices</h2>
        <ul>
            <% for (let crypto in cryptoPrices) { %>
                <li><%= crypto %>: $<%= cryptoPrices[crypto].toFixed(2) %></li>
            <% } %>
        </ul>
    <% } %>
</body>
</html>
